    "LevelUpDialog": {
      "description": "Celebration dialog when user levels up",
      "filePath": "/components/mind-dialog/level-up-dialog.tsx",
      "props": {
        "open": { "type": "boolean", "required": true },
        "onOpenChange": { "type": "(open: boolean) => void", "required": true },
        "level": { "type": "string", "required": true },
