        { "step": 3, "action": "User clicks add button on content card", "result": "Items added to queue" },
        { "step": 4, "action": "System shows toast notification", "result": "TrainingQueueToast displayed" },
        { "step": 5, "action": "Queue status changes to active", "result": "Widget shows training status" },
        { "step": 6, "action": "Items process sequentially", "result": "Progress updates in real-time" },
        { "step": 7, "action": "All items complete", "result": "Queue status changes to finished" },
        { "step": 8, "action": "User views results", "result": "Result badges shown, score updated" },
        { "step": 9, "action": "User dismisses/previews", "result": "Queue status resets to dull" }
      ]
    },

    "retryFailedFlow": {
      "description": "User retries failed training items",
      "steps": [
        { "step": 1, "action": "User sees failed badge", "result": "Can click to filter" },
        { "step": 2, "action": "User clicks retry on item", "result": "Item status resets to queued" },
        { "step": 3, "action": "Item reprocesses", "result": "Status → training → completed/failed" }
      ]
    },

    "levelUpFlow": {
      "description": "User levels up after training",
      "steps": [
        { "step": 1, "action": "Training completes", "result": "Score increments by 300 per item" },
        { "step": 2, "action": "Score crosses threshold", "result": "hasLevelChanged = true" },
        { "step": 3, "action": "LevelUpDialog triggers", "result": "Celebration dialog shows" },
        { "step": 4, "action": "User clicks Continue", "result": "acknowledgeLevelChange() called" }
      ]
    }
